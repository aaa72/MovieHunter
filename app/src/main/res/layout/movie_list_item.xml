<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/movie_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="?android:attr/alertDialogIcon"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/movie_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/movie_image"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:id="@+id/movie_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/movie_text_1"
        android:layout_below="@id/movie_text_1"
        android:maxLines="1"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:id="@+id/movie_text_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/movie_text_2"
        android:layout_below="@id/movie_text_2"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="3dp"
        />

</RelativeLayout>
